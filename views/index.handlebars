<div class="container bg">
    <div class="row">
        <div class="center col-sm-12">
                {{!-- <img src="/assets/img/mainBurger.jpg" alt="Bob's Burgers App"> --}}
            
            <h1>Bob's "Eat-da-burger" Burgers</h1>
            <p></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <br>
            <h2>Available Sandwiches!</h2>
            <h3>Pick one to eat!!</h3>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}

                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Eat It!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>

        </div>

        <div class="col-sm-6">

            <h2>Eaten burgers!</h2>

            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}

            </li>
            {{/if}} {{/each}}

        </div>

    </div>

    <div class="row">
        <div class="center col-sm-12">

            <h2>Create A Burger!</h2>

            <form class="create-update-form" action="/api/burgers" method="POST">
            <div class="form-group">
            <p>Enter the name of the Burger you would like.</p>
                    <input type="text" id="" name="burger_name">
                    <input type="hidden" name="devouered" value="false">
                </div>

                <button class="btn-primary" type="submit">Submit Order</button>
            </form>
        </div>
    </div>
</div>