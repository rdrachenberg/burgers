<div class="container-bg">
    <div class="row">
        <div class="transbox">
            <div class="item-a">
                <h1>
                    <strong>Bob's "Eat-da-burger" Burgers</strong>
                </h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="item-b">
            <h2>Waiting to be devoured!</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}

                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour it !</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>

        </div>

        <div class="item-c">

            <h2>Eaten burgers!</h2>

            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}

            </li>
            {{/if}} {{/each}}

        </div>

    </div>
<script type="text/javascript">

    $(".transbox").hover(function() {
        $(this).delay(5000).hide();
        $(this).replaceWith('<iframe src="https://media0.giphy.com/media/W5ZnhZwHcyNN3qYy7f/giphy.gif" width="480" height="270" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/bobs-burgers-cheeseburger-11ZStfKZSXJN1S">');
        $(".item-d").append("<div>" + "<br>" + '<iframe src="https://media0.giphy.com/media/W5ZnhZwHcyNN3qYy7f/giphy.gif" width="480" height="270" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/bobs-burgers-cheeseburger-11ZStfKZSXJN1S">');
    });
    $(".item-d").hover('hover', function() {
        $(".item-d").append("<div>" + "<br>" + '<iframe src="https://media0.giphy.com/media/W5ZnhZwHcyNN3qYy7f/giphy.gif" width="480" height="270" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/bobs-burgers-cheeseburger-11ZStfKZSXJN1S">');
    });
    
</script>
    <div class="row">
        <div class="item-d">

            <h2 class="createBurgerText">Create A Burger!</h2>

            <form class="insertOne-form" action="/api/burgers" method="POST">
            <div class="form-group">
                    <input type="text" id="" name="burger_name" placeholder="Enter burger name here" class="inputBox">
                    <input type="hidden" name="devouered" value="false">
                </div>

                <button class="btn-primary" type="submit">Submit Order</button>
            </form>
        </div>
    </div>
</div>